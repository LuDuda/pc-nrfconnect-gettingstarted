{
    "type": "Recipe",
    "title": "Update your OS",
    "tool": "linux_update-noversion",
    "platforms": { "platform": "linux" },
    "description": "Ensure that your Linux OS is up-to-date.",
    "checkables": [
        {
            "type": "Checkable",
            "steps": [
                {
                    "type": "Step",
                    "platforms": { "platform": "linux", "osRelease": "debian" },
                    "title": "Update system (apt)",
                    "description": [
                        "Ensure your OS is up-to-date. On Debian/Ubuntu, you'll first need to update the local database list of available packages before upgrading:",
                        {
                            "type": "commands",
                            "description": [
                                "sudo apt-get update",
                                "sudo apt-get upgrade"
                            ]
                        }
                    ]
                },
                {
                    "type": "Step",
                    "platforms": { "platform": "linux", "osRelease": "fedora" },
                    "title": "Update system (rpm)",
                    "description": [
                        "Ensure your OS is up-to-date. On Fedora:",
                        {
                            "type": "commands",
                            "description": [
                                "sudo dnf upgrade"
                            ]
                        },
                        "Note that having a newer version available for an installed package (and reported by `dnf check-update`) does not imply a subsequent `dnf upgrade` will install it, because it must also ensure dependencies and other restrictions are satisfied."
                    ]
                },
                {
                    "type": "Step",
                    "platforms": {
                        "platform": "linux",
                        "osRelease": "clear-linux-os"
                    },
                    "title": "Update system (swupd)",
                    "description": [
                        "Ensure your OS is up-to-date. On Clear Linux:",
                        {
                            "type": "commands",
                            "description": ["sudo swupd update"]
                        }
                    ]
                }
            ]
        }
    ]
}
