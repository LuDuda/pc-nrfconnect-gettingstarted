                    "type": "Step",
                    "title": "Install Git",
                    "description": [
                        "Install Git by entering the following command:",
                        {
                            "type": "commands",
                            "description": [
                                "sudo apt-get install git"
                            ]
                        }
                    ]
                }
            ],
            "checkers": [
