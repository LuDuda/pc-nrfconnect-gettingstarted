{
    "type": "Recipe",
    "title": "Clone the nRF Connect SDK",
    "tool": "nrf_connect_sdk-0.1.0",
    "platforms": { "platform": "all" },
    "description": [
        "This describe how you clone and set up the nRF Connect SDK.",
        "If you intend to contribute directly to any of the repositories, you will have to make forks of the repositories. To do this, you can follow the instructions on [github.com](https://help.github.com/articles/fork-a-repo/)"
    ],
    "checkables": [
        {
            "type": "Checkable",
            "steps": [
                {
                    "type": "Step",
                    "platforms": { "platform": "all" },
                    "title": "Clone the repositories",
                    "description": [
                        "Clone the latest SDK repositories:",
                        {
                            "type": "commands",
                            "description": [
                                "cd <sourcecode_root>",
                                "mkdir ncs",
                                "cd ncs",
                                "git clone https://github.com/NordicPlayground/fw-nrfconnect-zephyr.git zephyr",
                                "git clone https://github.com/NordicPlayground/fw-nrfconnect-mcuboot.git mcuboot",
                                "git clone https://github.com/NordicPlayground/fw-nrfconnect-nrf.git nrf",
                                "git clone https://github.com/NordicPlayground/nrfxlib.git nrfxlib"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Checkable",
            "steps": [
                {
                    "type": "Step",
                    "platforms": { "platform": "win32" },
                    "title": "Install python modules",
                    "description": [
                        "Install the required python modules:",
                        {
                            "type": "commands",
                            "description": [
                                "cd <sourcecode_root>\\zephyr",
                                "pip3 install -r scripts\\requirements.txt"
                            ]
                        }
                    ]
                },
                {
                    "type": "Step",
                    "platforms": [
                        { "platform": "linux" },
                        { "platform": "darwin" }
                    ],
                    "title": "Install python modules",
                    "description": [
                        "Install the required python modules:",
                        {
                            "type": "commands",
                            "description": [
                                "cd <sourcecode_root>/zephyr",
                                "pip3 install --user -r scripts/requirements.txt"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Checkable",
            "steps": [
                {
                    "type": "Step",
                    "platforms": [
                        { "platform": "linux" },
                        { "platform": "darwin" }
                    ],
                    "title": "Set up environment",
                    "description": [
                        "Set up the environment:",
                        {
                            "type": "commands",
                            "description": [
                                "cd <sourcecode_root>",
                                "unset ZEPHYR_SDK_INSTALL_DIR",
                                "source zephyr/zephyr-env.sh"
                            ]
                        },
                        "It is recommended to add this automatically to your environment (i.e. *.bashrc*)."
                    ]
                },
                {
                    "type": "Step",
                    "platforms": { "platform": "win32" },
                    "title": "Set up environment",
                    "description": [
                        "Set up the environment:",
                        {
                            "type": "commands",
                            "description": [
                                "cd <sourcecode_root>",
                                "zephyr\\zephyr-env.cmd"
                            ]
                        },
                        "It is recommended to add this automatically to your environment."
                    ]
                }
            ]
        }
    ]
}
